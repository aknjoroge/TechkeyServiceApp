<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".photoshop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView129"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Check The Project You Want Done and Give A Vivid Description"
                android:textAlignment="center"

                android:textSize="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ILLUSTRATION"
                                android:textColor="@color/black" />

                            <Switch
                                android:id="@+id/aiswitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Switch" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="PHOTOSHOP"
                                android:textColor="@color/black" />

                            <Switch
                                android:id="@+id/psswitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Switch" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="XD DESIGN"
                                android:textColor="@color/black" />

                            <Switch

                                android:id="@+id/xdswitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Switch" />

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/psselectbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/amera_24"
                                android:text="Select Your Image..."
                                android:textAlignment="center"
                                android:textColor="@color/blue" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:id="@+id/photoshopimg"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_splashlogo" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/psedittext"
                                android:layout_width="280dp"
                                android:layout_height="50dp"

                                android:layout_marginTop="2dp"
                                android:background="@drawable/custominput"
                                android:ems="10"
                                android:hint="Enter Your Project Description"
                                android:inputType="textMultiLine"
                                android:textAlignment="center" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/textView54"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select the Photo you want to be worked on and select the type of service you are interested in then add a description about the service ,  We will respond as soon as we receive the data."
                                android:textAlignment="center" />
                        </TableRow>


                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <Button
                                android:id="@+id/orderpsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:text="order"
                                android:textColor="@color/purewhite" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:id="@+id/psprogresbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>