<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accountsbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".accounts">

    <TextView
        android:id="@+id/verifymsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/error_24"
        android:text="Please Verify Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/verifybtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="VERIFY NOW"
        android:visibility="invisible" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/persona"
                android:fontFamily="sans-serif-light"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/namebtn"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:background="@drawable/group"
                android:text="change name"
                android:textColor="@color/blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@android:drawable/sym_action_email"
                android:fontFamily="sans-serif-light"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/emailbtn"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:background="@drawable/group"
                android:text="change email"
                android:textColor="@color/blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@android:drawable/stat_sys_vp_phone_call"
                android:fontFamily="sans-serif-light"
                android:text="Phone"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/passbtn"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/group"
                android:text="change password"
                android:textSize="10sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/delbtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/group"
        android:text="Delete Account"
        android:textColor="@color/red"
        android:textSize="10sp" />

</LinearLayout>